<div class="section">
   <div class="section-title center">
      {% if (experience.index > 0) %}<a class="previous" href="" data-action="click->render#render" data-url="{{ path('app_experience', {'index':experience.index-1}) }}">&nbsp;&lt;&lt;&nbsp;</a>{% endif %}
      <div class="mobile">
         Experiencia en {{ external_link(experience.company.url, experience.company.shortName) }}<br />
      </div>
      <div class="desktop">
         Experiencia en {{ external_link(experience.company.url, experience.company.longName) }}<br />
      </div>
      <span class="date-range no-bold">{{ experience.startDate|replace({'_': '-'})|format_datetime(pattern="MMMM yyyy", locale="es")|capitalize }} - {% if experience.endDate == '' %}Actualmente{% else %}{{ experience.endDate|replace({'_': '-'})|format_datetime(pattern="MMMM yyyy", locale="es")|capitalize }}{% endif %}</span><br />
      <span class="date-range no-bold">{{ experience.city }}</span>
      {% if (experience.index < experiencesLastIndex) %}<a class="next" href="" data-action="click->render#render" data-url="{{ path('app_experience', {'index':experience.index+1}) }}">&nbsp;&gt;&gt;&nbsp;</a>{% endif %}
   </div>
   <div class="section-separator center">
      <img src="{{ asset('images/left-arrow.svg') }}" width="20" height="20"><img class="line" src="{{ asset('images/separator.svg') }}" height="20"><img src="{{ asset('images/right-arrow.svg') }}" width="20" height="20">
   </div>
   <div class="section-content">
      <div class="experience">
         <div class="job-title">Trabajé como <b>{{ experience.jobTitle }}</b>.</div>
         <div class="description">{{ experience.description }}</div>
         {% if experience.technologies is not empty %}<div class="technologies">Tecnologías y herramientas usadas: <span class="bold">{{ experience.technologies|join(', ') }}.</span></div>{% endif %}
      </div>
   </div>
</div>
